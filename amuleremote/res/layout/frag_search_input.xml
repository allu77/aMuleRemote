<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView1"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    
    
        <LinearLayout
        android:id="@+id/LinearLyout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <TextView 
        android:id="@+id/textView1" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="@string/search_label_file_name"/>
    
    <EditText 
        android:id="@+id/search_file_name" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:inputType="text"/>
    
    <TextView android:id="@+id/textView2" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="@string/search_label_search_type"/>
    
    <Spinner
        android:id="@+id/search_search_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/search_search_type_description"/>
    
    <LinearLayout
        android:id="@+id/search_layout_advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/search_label_file_type" /> <Spinner
            android:id="@+id/search_file_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/search_file_type" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_label_extension" />
 
        <EditText
            android:id="@+id/search_extension"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_label_min_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" > 
	        <EditText
	            android:id="@+id/search_min_size"
                android:layout_width="0dip"
                android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:inputType="number" />
	         
            <Spinner
                android:id="@+id/search_min_size_dim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/search_size_dim_description" />

		</LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_label_max_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/search_max_size"
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />
             
            <Spinner
                android:id="@+id/search_max_size_dim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/search_size_dim_description" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_label_availability" />
 
        <EditText
            android:id="@+id/search_availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>
   
    <Button
        android:id="@+id/search_button_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minWidth="128dip"
        android:text="@string/search_button_go" />
    
    </LinearLayout>

</ScrollView>