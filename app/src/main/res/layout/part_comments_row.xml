<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
    android:paddingTop="@dimen/list_vertical_padding"
  android:paddingBottom="@dimen/list_vertical_padding" xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/amuledl_comments_row_author"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:text="Author"
            tools:ignore="HardcodedText"
            android:layout_weight="1">
    </TextView>

        <TextView
            android:id="@+id/amuledl_comments_row_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Rating"
            tools:ignore="HardcodedText" >
    </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/amuledl_comments_row_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:singleLine="true"
        android:text="Filename"
        tools:ignore="HardcodedText" >
</TextView>

    <TextView
        android:id="@+id/amuledl_comments_row_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/amuledl_comments_row_author"
        android:text="Comment"
        tools:ignore="HardcodedText"
        android:textStyle="italic">
</TextView>

</LinearLayout>
